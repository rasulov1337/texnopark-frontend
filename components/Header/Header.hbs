<div class="header">
    <div class="header__logo-container">
        <img src="../../images/logo.png" class="header__logo-container__img" />
    </div>

    <div class="header__links">
        <div class="header__links__component">
            <a id="main">Главная</a>
        </div>
        {{#if isAuth}}
            <div class="header__links__component">
                <a id="recomend">Рекомендации</a>
            </div>
        {{/if}}
        <div class="header__links__component">
            <a id="best">Бестселлеры</a>
        </div>
    </div>

    <div class="header__account-container">
        {{#if isAuth}}
            <div class="header__account-container__auth">
                <img
                    class="js-profile-img"
                    src="../../images/default_user_icon.png"
                    width="50px"
                    height="50px"
                />
                <button
                    id="logout-button"
                    class="header__account-container__button"
                >Выйти</button>
            </div>
        {{else}}
            <button
                id="login-button"
                class="header__account-container__button"
            >Войти</button>
        {{/if}}
    </div>
</div>